{
  "name": "ethdapp",
  "version": "0.1.0",
  "workspaces": {
    "packages": [
      "packages/hardhat",
      "packages/react"
    ]
  },
  "scripts": {
    "react:dev": "npm run -w @ethdapp/react dev --silent",
    "react:build": "npm run -w @ethdapp/react build",
    "react:lint": "npm run -w @ethdapp/react lint",
    "react:preview": "npm run -w @ethdapp/react preview",
    "hardhat:compile": "npm exec -w @ethdapp/hardhat hardhat compile",
    "hardhat:clean": "npm exec -w @ethdapp/hardhat hardhat clean",
    "hardhat:help": "npm exec -w @ethdapp/hardhat hardhat help",
    "hardhat:node": "npx exec -w @ethdapp/hardhat hardhat node",
    "hardhat:test": "npm exec -w @ethdapp/hardhat hardhat test"
  },
  "private": "true",
  "keywords": [
    "web3",
    "react",
    "ethereum",
    "dapp"
  ],
  "author": "Manuel Figueroa",
  "license": "MIT",
  "description": "A project starter for developeing web3 DApps with React, Wagmi and Hardhat"
}